@model IEnumerable<NewTiceAI.Models.Invite>

@{
    ViewData["Title"] = "Index";
}

<header class="page-header">
    <h2> Invites</h2>
</header>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong>Organization Invites</strong>
            </div>
            <div class="card-body">
<table class="table" id="invitesTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InviteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JoinDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InviteeEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InviteeFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InviteeLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsValid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Organization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invitor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invitee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InviteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JoinDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InviteeEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InviteeFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InviteeLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsValid)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Organization!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invitor!.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invitee!.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $('#invitesTable').DataTable();
        });
    </script>
}