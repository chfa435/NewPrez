@model NewTiceAI.Models.Contact
@using NewTiceAI.Enums;
@using NewTiceAI.Helpers
@using NewTiceAI.Services.Interfaces

@inject IImageService _ImageService

@{
    ViewData["Title"] = "Delete Contact";
}

<h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">Contacts /</span> Delete Contact</h4>
<div class="row">
    <div class="col-12">
        <div class="card">
            <h5 class="card-header">Confirm Contact Deletion</h5>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h6 class="alert-heading fw-bold mb-1">Are you sure you want to delete this contact?</h6>
                    <p class="mb-0">This action cannot be undone.</p>
                </div>

                <div class="row">
                    <div class="col-12">
                        <h6 class="fw-normal">Contact Details</h6>
                        <hr class="mt-0" />
                    </div>

                    <div class="col-12 col-md-6">
                        <label class="form-label">Full Name</label>
                        <p class="form-control-static">@Model.FullName</p>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Email</label>
                        <p class="form-control-static">@Model.Email</p>
                    </div>

                    <div class="col-12 col-md-6">
                        <label class="form-label">Phone Number</label>
                        <p class="form-control-static">@Model.PhoneNumber</p>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Mobile</label>
                        <p class="form-control-static">@Model.Mobile</p>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Title</label>
                        <p class="form-control-static">@Model.Title</p>
                    </div>

                    @if (Model.Address != null)
                    {
                        <div class="col-12">
                            <h6 class="mt-2 fw-normal">Address Information</h6>
                            <hr class="mt-0" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label">Address</label>
                            <p class="form-control-static">@Model.Address.Address1</p>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">City</label>
                            <p class="form-control-static">@Model.Address.City</p>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">State</label>
                            <p class="form-control-static">@Model.Address.State</p>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label">Zip Code</label>
                            <p class="form-control-static">@Model.Address.ZipCode</p>
                        </div>
                    }

                    <div class="col-12 mt-3">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
