@model NewTiceAI.Models.Contact
@using NewTiceAI.Enums;
@using NewTiceAI.Helpers
@using NewTiceAI.Services.Interfaces

@inject IImageService _ImageService

@{
    ViewData["Title"] = "Edit Contact";
    Address? ContactAddress = Model.Address == null ? new() : Model.Address;
}

<h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">Contacts /</span> Edit Contact</h4>
<div class="row">
    <div class="col-12">
        <div class="card">
            <h5 class="card-header">Edit Contact Information</h5>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="OrganizationId" />

                    <!-- Contact Details -->
                    <div class="row">
                        <div class="col-12">
                            <h6 class="fw-normal">Contact Details</h6>
                            <hr class="mt-0" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="PhoneNumber"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Mobile"></label>
                            <input asp-for="Mobile" class="form-control" placeholder="Mobile Number" />
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Title"></label>
                            <input asp-for="Title" class="form-control" placeholder="Title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label class="form-label" asp-for="ContactNotes"></label>
                            <textarea asp-for="ContactNotes" class="form-control" rows="6" placeholder="Contact Notes"></textarea>
                            <span asp-validation-for="ContactNotes" class="text-danger"></span>
                        </div>

                        <!-- Address Information -->
                        <div class="col-12">
                            <h6 class="mt-2 fw-normal">Address Information</h6>
                            <hr class="mt-0" />
                        </div>

                        <div class="col-12">
                            <label class="form-label" asp-for="Address!.Address1"></label>
                            <input asp-for="Address!.Address1" class="form-control" placeholder="Street Address" />
                            <span asp-validation-for="Address!.Address1" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Address!.City"></label>
                            <input asp-for="Address!.City" class="form-control" placeholder="City" />
                            <span asp-validation-for="Address!.City" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Address!.State"></label>
                            <select asp-for="Address!.State" class="form-select" asp-items="@Html.GetEnumSelectList<States>()">
                                <option value="">Select State</option>
                            </select>
                            <span asp-validation-for="Address!.State" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Address!.ZipCode"></label>
                            <input asp-for="Address!.ZipCode" class="form-control" placeholder="Zip Code" />
                            <span asp-validation-for="Address!.ZipCode" class="text-danger"></span>
                        </div>

                        <!-- Preferences -->
                        <div class="col-12">
                            <h6 class="mt-2 fw-normal">Preferences</h6>
                            <hr class="mt-0" />
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" asp-for="DoNotCall" />
                                <label class="form-check-label" asp-for="DoNotCall"></label>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" asp-for="EmailOptOut" />
                                <label class="form-check-label" asp-for="EmailOptOut"></label>
                            </div>
                        </div>

                        <div class="col-12 mt-3">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}