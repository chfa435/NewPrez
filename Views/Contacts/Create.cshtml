@model Contact
@using NewTiceAI.Enums;
@using NewTiceAI.Helpers
@using NewTiceAI.Services.Interfaces

@inject IImageService _ImageService

@{
    ViewData["Title"] = "Create Contact";
}

<link rel="stylesheet" href="/assets/vendor/libs/typeahead-js/typeahead.css" />
<link rel="stylesheet" href="/assets/vendor/libs/select2/select2.css" />
<link rel="stylesheet" href="/assets/vendor/libs/form-validation/umd/styles/index.min.css" />
<link rel="stylesheet" href="/assets/vendor/libs/animate-css/animate.css" />
<link rel="stylesheet" href="/assets/vendor/libs/sweetalert2/sweetalert2.css" />

<link rel="stylesheet" href="/assets/vendor/libs/flatpickr/flatpickr.css" />
<link rel="stylesheet" href="/assets/vendor/libs/bootstrap-datepicker/bootstrap-datepicker.css" />
<link rel="stylesheet" href="/assets/vendor/libs/bootstrap-daterangepicker/bootstrap-daterangepicker.css" />
<link rel="stylesheet" href="/assets/vendor/libs/jquery-timepicker/jquery-timepicker.css" />
<link rel="stylesheet" href="/assets/vendor/libs/pickr/pickr-themes.css" />

<h4 class="py-3 breadcrumb-wrapper mb-4">
    <span class="text-muted fw-light">Contacts /</span> Create Contact
</h4>

<div class="row">
    <div class="col-12">
        <div class="card">
            <h5 class="card-header">Create Contact Information</h5>
            <div class="card-body">
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Contact Image -->
                    <div class="row mb-4">
                        <div class="col-12 col-md-4">
                            <div class="square-img-container">
                                <img id="contactImage" class="square-img" src="@FileUploader.DefaultUserImage">
                            </div>
                            <div class="mt-2">
                                <input asp-for="ImageFile" class="form-control" accept=".png,.jpg,.jpeg,.gif" onchange="document.getElementById('contactImage').src= window.URL.createObjectURL(this.files[0])" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Details -->
                    <div class="row">
                        <div class="col-12">
                            <h6 class="fw-normal">Contact Details</h6>
                            <hr class="mt-0" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="PhoneNumber"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Mobile"></label>
                            <input asp-for="Mobile" class="form-control" placeholder="Mobile Number" />
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Title"></label>
                            <input asp-for="Title" class="form-control" placeholder="Title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="AccountId"></label>
                            <select asp-for="AccountId" class="form-control" asp-items="ViewBag.AccountsList">
                                <option value="">Select Account</option>
                            </select>
                            <span asp-validation-for="AccountId" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="DateOfBirth"></label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Gender"></label>
                            <select asp-for="Gender" class="form-control" asp-items="ViewBag.GendersList">
                                <option value="">Select Gender</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Specialty"></label>
                            <input asp-for="Specialty" class="form-control" placeholder="Specialty" />
                            <span asp-validation-for="Specialty" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <h6 class="mt-4 fw-normal">Additional Information</h6>
                            <hr class="mt-0" />
                        </div>

                        <div class="col-12">
                            <label class="form-label" asp-for="ContactNotes"></label>
                            <textarea asp-for="ContactNotes" class="form-control" rows="4" placeholder="Add notes about the contact"></textarea>
                            <span asp-validation-for="ContactNotes" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="ProfileUrl"></label>
                            <input asp-for="ProfileUrl" class="form-control" placeholder="Profile URL" />
                            <span asp-validation-for="ProfileUrl" class="text-danger"></span>
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="ProfileUrl2"></label>
                            <input asp-for="ProfileUrl2" class="form-control" placeholder="Secondary Profile URL" />
                            <span asp-validation-for="ProfileUrl2" class="text-danger"></span>
                        </div>

                        <div class="col-12 d-flex justify-content-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-primary">Create Contact</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
