@model NewTiceAI.Models.Ticket
@using NewTiceAI.Models.Enums
@using NewTiceAI.Services.Interfaces
@using Microsoft.AspNetCore.Identity

@inject UserManager<TAUser> UserManager
@inject IBTProjectService ProjectService
@inject IBTFileService FileService

@{
    ViewData["Title"] = "Ticket Details";
    TAUser? btUser = await UserManager.GetUserAsync(User);
    TAUser? projectManager = await ProjectService.GetProjectManagerAsync(Model.ProjectId!.Value);
}

<h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">Tickets /</span> Ticket Details</h4>
<div class="row">
    <div class="col-12">
        <div class="card">
            <h5 class="card-header">Ticket Information</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <h6 class="fw-normal">Ticket Details</h6>
                        <hr class="mt-0" />
                    </div>

                    <div class="col-12 col-md-6">
                        <label class="form-label">Title</label>
                        <p class="form-control-static">@Model.Title</p>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Status</label>
                        <p class="form-control-static">@Model.TicketStatus?.Name</p>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Description</label>
                        <p class="form-control-static">@Model.Description</p>
                    </div>

                    <div class="col-12">
                        <h6 class="mt-2 fw-normal">Ticket Properties</h6>
                        <hr class="mt-0" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label">Type</label>
                        <p class="form-control-static">@Model.TicketType?.Name</p>
                    </div>
                    <div class="col-12 col-md-4">
                        <label class="form-label">Priority</label>
                        <p class="form-control-static">@Model.TicketPriority?.Name</p>
                    </div>
                    <div class="col-12 col-md-4">
                        <label class="form-label">Project</label>
                        <p class="form-control-static">@Model.Project?.Name</p>
                    </div>

                    <div class="col-12">
                        <h6 class="mt-2 fw-normal">Team Information</h6>
                        <hr class="mt-0" />
                    </div>

                    <div class="col-12 col-md-4">
                        <label class="form-label">Submitter</label>
                        <p class="form-control-static">@Model.SubmitterUser?.FullName</p>
                    </div>
                    <div class="col-12 col-md-4">
                        <label class="form-label">Developer</label>
                        <p class="form-control-static">@Model.DeveloperUser?.FullName</p>
                    </div>
                    <div class="col-12 col-md-4">
                        <label class="form-label">Project Manager</label>
                        <p class="form-control-static">@projectManager?.FullName</p>
                    </div>

                    <div class="col-12 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="AllTickets" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- Ck Editor JS -->
    <script src="~/template/assets/js/ckeditor.js"></script>

    <script>
        if ($('.editor').length > 0) {
            ClassicEditor
                .create(document.querySelector('.editor'), {
                    toolbar: {
                        items: [
                            'heading', '|',
                            'fontfamily', 'fontsize', '|',
                            'alignment', '|',
                            'fontColor', 'fontBackgroundColor', '|',
                            'bold', 'italic', 'strikethrough', 'underline', 'subscript', 'superscript', '|',
                            'link', '|',
                            'outdent', 'indent', '|',
                            'bulletedList', 'numberedList', 'todoList', '|',
                            'code', 'codeBlock', '|',
                            'insertTable', '|',
                            'uploadImage', 'blockQuote', '|',
                            'undo', 'redo'
                        ],
                        shouldNotGroupWhenFull: true
                    }
                })
                .then(editor => {
                    window.editor = editor;
                })
                .catch(err => {
                    console.error(err.stack);
                });
        }
    </script>
}