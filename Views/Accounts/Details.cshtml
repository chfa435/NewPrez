@model NewTiceAI.Models.Account

@{
    ViewData["Title"] = "Account Details";
}

<h4 class="py-3 breadcrumb-wrapper mb-4"><span class="text-muted fw-light">Accounts /</span> Account Details</h4>
<div class="row">
    <div class="col-12">
        <div class="card">
            <h5 class="card-header">Account Information</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <h6 class="fw-normal">Account Details</h6>
                        <hr class="mt-0" />
                    </div>

                    <div class="col-12 col-md-6">
                        <label class="form-label">Account Name</label>
                        <p class="form-control-static">@Model.Name</p>
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Email</label>
                        <p class="form-control-static">@Model.EmailAddress</p>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Description</label>
                        <p class="form-control-static">@Model.Description</p>
                    </div>

                    <div class="col-12">
                        <h6 class="mt-2 fw-normal">Account Type</h6>
                        <hr class="mt-0" />
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label">Account Type</label>
                        <p class="form-control-static">@Model.AccountType</p>
                    </div>

                    <div class="col-12">
                        <h6 class="mt-2 fw-normal">Address Information</h6>
                        <hr class="mt-0" />
                    </div>
                    @if (Model.ShippingAddress != null)
                    {
                        <div class="col-12">
                            <label class="form-label">Address</label>
                            <p class="form-control-static">@Model.ShippingAddress.Address1</p>
                            @if (!string.IsNullOrEmpty(Model.ShippingAddress.Address2))
                            {
                                <p class="form-control-static">@Model.ShippingAddress.Address2</p>
                            }
                        </div>
                        <div class="col-12 col-md-4">
                            <label class="form-label">City</label>
                            <p class="form-control-static">@Model.ShippingAddress.City</p>
                        </div>
                        <div class="col-12 col-md-4">
                            <label class="form-label">State</label>
                            <p class="form-control-static">@Model.ShippingAddress.State</p>
                        </div>
                        <div class="col-12 col-md-4">
                            <label class="form-label">Zip Code</label>
                            <p class="form-control-static">@Model.ShippingAddress.ZipCode</p>
                        </div>
                    }

                    <div class="col-12 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                        <a asp-action="AllAccounts" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
