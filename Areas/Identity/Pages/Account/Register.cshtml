@page
@model RegisterModel

@{
    ViewData["Title"] = "Register New Company";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<h4 class="mb-2">Adventure starts here 🚀</h4>
<p class="mb-4">Make your app management easy and fun!</p>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" class="mb-3" method="post">
    <div class="mb-3">
        <label asp-for="Input.OrganizationName" class="form-label">Organization Name</label>
        <input asp-for="Input.OrganizationName"
               class="form-control"
               placeholder="Enter your username"
               autofocus />
    </div>
    <div class="mb-3">
        <label asp-for="Input.OrganizationDescription" class="form-label">Description</label>
        <input asp-for="Input.OrganizationDescription"
               class="form-control"
               placeholder="Enter your username"
               autofocus />
    </div>
    
    <div class="mb-3">
        <label asp-for="Input.FirstName" class="form-label">First Name</label>
        <input asp-for="Input.FirstName"
               class="form-control"
               placeholder="Enter your username"
               autofocus />
    </div>
    <div class="mb-3">
        <label asp-for="Input.LastName" class="form-label">Last Name</label>
        <input asp-for="Input.LastName"
               class="form-control"
               placeholder="Enter your username"
               autofocus />
    </div>
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">Email</label>
        <input asp-for="Input.Email"
               class="form-control" 
               placeholder="Enter your email" />
    </div>
    <div class="mb-3 form-password-toggle">
        <label class="form-label" asp-for="Input.Password">Password</label>
        <div class="input-group input-group-merge">
            <input asp-for="Input.Password"
                   class="form-control"                  
                   placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                   aria-describedby="password" />
            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
        </div>
    </div>
    <div class="mb-3 form-password-toggle">
        <label class="form-label" asp-for="Input.ConfirmPassword">Confirm Password</label>
        <div class="input-group input-group-merge">
            <input asp-for="Input.ConfirmPassword"
                   class="form-control"
                   placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                   aria-describedby="password" />
            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
        </div>
    </div>
    <div class="mb-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="terms-conditions" name="terms" />
            <label class="form-check-label" for="terms-conditions">
                I agree to
                <a href="javascript:void(0);">privacy policy & terms</a>
            </label>
        </div>
    </div>
    <button class="btn btn-primary d-grid w-100" type="submit">Sign up</button>
</form>

<p class="text-center">
    <span>Already have an account?</span>
    <a asp-page="./Login">
        <span>Sign in instead</span>
    </a>
</p>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
